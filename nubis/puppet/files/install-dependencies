#!/bin/bash

set -x

for pkg in \
   Math::Random::ISAAC \
   File::MimeInfo::Magic \
   Daemon::Generic \
   Crypt::OpenPGP \
   Crypt::SMIME \
   TheSchwartz \
   Any::URI::Escape \
   Daemon::Generic \
   Chart::Base \
   Crypt::OpenPGP \
   Crypt::SMIME \
   ElasticSearch \
   File::MimeInfo \
   HTTP::Lite \
   JSON::RPC \
   PatchReader \
   Authen::Radius \
   Template::Plugin::GD \
   Math::BigInt \
   ElasticSearch@0.68 \
  ; do
  echo "Installing $pkg"
  cpanm -l /var/www/bugzilla $pkg
done

exit
