#!/bin/bash

if /usr/local/bin/bugzilla-active; then
  echo "Starting Active services:"
  nubis-purpose "Queue Worker" service bugzilla-queue start
  nubis-purpose "Push Worker" service bugzilla-push start
  nubis-purpose "Push Worker" supervisorctl start bugzilla-pulse-shim
  done
else
  echo "Stopping Passive services:"
  service bugzilla-queue stop
  service bugzilla-push stop
  supervisorctl stop bugzilla-pulse-shim
fi
